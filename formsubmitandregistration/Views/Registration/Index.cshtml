@model formsubmitandregistration.Models.UserViewModel

@{
    ViewData["Title"] = "Registration";
}

<h2>User Registration</h2>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="RePassword"></label>
        <input asp-for="RePassword" />
        <span asp-validation-for="RePassword" class="text-danger"></span>
    </div>

    <div>
        <label>Gender:</label><br />
        <input type="radio" name="Gender" value="Male" /> Male
        <input type="radio" name="Gender" value="Female" /> Female
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div>
        <label>Courses:</label><br />
        <input type="checkbox" name="Courses" value="Math" /> Math
        <input type="checkbox" name="Courses" value="Science" /> Science
        <input type="checkbox" name="Courses" value="English" /> English
    </div>

    <div>
        <label>Country:</label>
        <select asp-for="Country">
            <option value="">--Select Country--</option>
            <option>USA</option>
            <option>Nepal</option>
            <option>India</option>
        </select>
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <br />
    <button type="submit">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
